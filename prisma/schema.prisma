datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

type attribute {
  key    String
  value  String
  active Boolean @default(true)
}

type categories {
  key    String
  value  String
  active Boolean @default(true)
}

model users {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  active     Boolean  @default(true)

  email      String    @unique
  password   String?
  first_name String?
  last_name  String?
  dob        DateTime?
  gender     String?
  address    address[]
  brands     brands?   @relation(fields: [brandsId], references: [id])
  brandsId   String?   @db.ObjectId  
}

model brands {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  active     Boolean   @default(true)
  products   products? @relation(fields: [productsId], references: [id])
  productsId String?   @db.ObjectId

  name        String
  description String
  busisnes    String
  attribute   attribute[]
  users       users[]
}

type address {
  created_at DateTime @default(now())
  active     Boolean  @default(true)

  name        String
  description String
  default     Boolean @default(false)

  phone    String
  street   String
  district String
  province String
  city     String
  zipcode  Int
  nation   String
}

model products {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  active     Boolean  @default(true)

  name        String
  description String
  attribute   attribute[]
  categories  categories[]
  images      String[]
  price       Float
  base        Float
  quantity    Int
  sold        attribute[]
  views       attribute[]
  comments    attribute[]
  brands      brands[]
}

model orders {  
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  created_at  DateTime @default(now())
  order_code  String   @unique
  first_name  String
  last_name   String
  address     String?
  email       String?
  phone       String?
  code        String?
  card        card
  items       items[]
}

type card {
  name       String
  number     String
  expiry     String
  cvc        String
}

type items {
  id         String
  name       String  
  quantity   Int
  price      Int
}
